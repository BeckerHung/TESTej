@model IEnumerable<ShoppingMail.Models.ProductModel>

@{
    ViewBag.Title = "商品管理";
}

    <h2>商品列表</h2>

    <p>
        @Html.ActionLink("新增商品", "Create")
        @Html.ActionLink("顯示目前上傳圖片", "ShowPhotos")
    </p>
<table class="table">
    <tr>
        <th>
            商品編號
        </th>
        <th>
            類別編號
        </th>
        <th>
            父類別編號
        </th>
        <th>
            商品名稱
        </th>
        <th>
            公司名稱
        </th>
        <th>
            介紹
        </th>
        <th>
            售價
        </th>
        <th>
            圖示
        </th>
        <th>
            庫存量
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CategoryId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ParentCategoryId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SupplierName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        <img src="~/Photos/@item.Img" width="200" height="300">
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Stock)
    </td>
    <td>
    </td>
</tr>
}

</table>
